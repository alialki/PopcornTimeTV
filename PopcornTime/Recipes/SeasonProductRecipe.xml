<head>
    <style>
        .badge {
        tv-tint-color: rgb(255,255,255);
        }
        .hover {
        tv-text-highlight-style: marquee-and-show-on-highlight;
        }
        .whiteButton {
        tv-tint-color: rgb(255, 255, 255);
        }
        .overlayPosition {
        tv-position: bottom-left;
        margin: 15 15 15 15;
        }
    </style>
</head>
<productBundleTemplate>
    <background>
        <!--<img src="{{FANART_IMAGE}}" />-->
    </background>
    <banner>
        <stack>
            <title>{{TITLE}}</title>
            <subtitle>{{SEASON}}</subtitle>
            <row>
                <text>{{RUNTIME}}</text>
                <text>{{GENRES}}</text>
                <text>{{YEAR}}</text>
                <badge src="resource://mpaa-{{RATING}}" class="badge" />
                <badge src="resource://cc" class="badge" />
                {{AIR_DATE_TIME}}
            </row>
            <description allowsZooming="true" moreLabel="more" actionID="showDescription:{{TITLE}}:{{DESCRIPTION}}">{{DESCRIPTION}}</description>
            <row>
                {{SEASONS_BUTTON}}
                {{WATCH_LIST_BUTTON}}
            </row>
        </stack>
        
        <heroImg src="{{IMAGE}}" />
    </banner>
    
    <!-- Episodes -->
    <shelf>
        <header>
            <title>{{EPISODE_COUNT}}</title>
        </header>
        <section>
            {{EPISODES}}
        </section>
    </shelf>
    
    <!-- Cast -->
    <shelf>
        <header>
            <title>Cast and Crew</title>
        </header>
        <section>
            {{CAST}}
        </section>
    </shelf>
</productBundleTemplate>
